<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblStatsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Real-time statistics"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#212121"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvStatsMean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mean: n/a"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/tvStatsStd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StdDev: n/a"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvStatsCm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cm: n/a"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvStatsCmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cmk: n/a"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <!-- Último resultado -->
        <TextView
            android:id="@+id/tvLastResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Último resultado: n/a"
            android:textColor="#2E7D32"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- ======== AQUI: coluna rótulos -> FrameLayout para posicionamento absoluto ======== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <!-- Coluna fixa com labels (FrameLayout) -->
            <FrameLayout
                android:id="@+id/labelsColumn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingRight="8dp" >

                <TextView
                    android:id="@+id/txtUSLLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USL"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#1976D2" />

                <TextView
                    android:id="@+id/txtNominalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOM"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#388E3C" />

                <TextView
                    android:id="@+id/txtLSLLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LSL"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#1976D2" />

            </FrameLayout>

            <!-- Gráfico com scroll horizontal -->
            <HorizontalScrollView
                android:id="@+id/hsvStats"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"
                android:background="#FFFFFF">

                <TransducerAppXA.Views.StatsChartView
                    android:id="@+id/statsChartView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </HorizontalScrollView>

        </LinearLayout>
        <!-- ======== fim da área do gráfico/labels ======== -->

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/btnCloseStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:layout_marginTop="12dp"
            android:background="#DDDDDD" />

    </LinearLayout>
</ScrollView>