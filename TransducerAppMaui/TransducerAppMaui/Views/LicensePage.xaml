<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TransducerAppMaui.Views.LicensePage"
    Title="Licença"
    BackgroundColor="#FAFAFA">

    <VerticalStackLayout Padding="18" Spacing="12">

        <Label Text="Licença necessária"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="#212121" />

        <Label Text="Este dispositivo ainda não possui licença. Informe a licença fornecida pelo suporte."
               FontSize="14"
               TextColor="#424242" />

        <Frame Padding="12" BackgroundColor="White" CornerRadius="10" HasShadow="True">
            <VerticalStackLayout Spacing="10">
                <Label Text="KeyCode deste aparelho:"
                       FontSize="14"
                       TextColor="#424242" />

                <Label x:Name="KeyCodeLabel"
                       Text="-----"
                       FontSize="26"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       TextColor="#212121" />

                <Entry x:Name="LicenseEntry"
                       Placeholder="Licença (5 caracteres)"
                       MaxLength="5"
                       HorizontalTextAlignment="Center"
                       FontSize="18"
                       TextTransform="Uppercase" />
            </VerticalStackLayout>
        </Frame>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Grid.Column="0"
                    Text="VALIDAR"
                    Clicked="OnValidateClicked"
                    HeightRequest="44" />

            <Button Grid.Column="1"
                    Text="SAIR"
                    Clicked="OnExitClicked"
                    HeightRequest="44"
                    BackgroundColor="#D32F2F"
                    TextColor="White" />
        </Grid>

        <Label x:Name="ErrorLabel"
               Text=""
               TextColor="#D32F2F"
               FontSize="13"
               IsVisible="False" />

    </VerticalStackLayout>
</ContentPage>