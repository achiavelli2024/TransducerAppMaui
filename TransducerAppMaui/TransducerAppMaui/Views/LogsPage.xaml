<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:res="clr-namespace:TransducerAppMaui.Resources.Strings"
    x:Class="TransducerAppMaui.Views.LogsPage"
    Title="{x:Static res:AppResources.Logs_Title}">

    <!-- FIX SCROLL: usar Grid com RowDefinitions em vez de VerticalStackLayout -->
    <Grid Padding="10"
          RowDefinitions="Auto,Auto,*"
          RowSpacing="10"
          BackgroundColor="#FAFAFA">

        <!-- Linha 0 -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
            <Label Text="{x:Static res:AppResources.Logs_Header}" FontAttributes="Bold" FontSize="14" TextColor="#212121" />
            <Button x:Name="RefreshButton" Grid.Column="1" Text="{x:Static res:AppResources.Logs_Button_Load}" FontSize="10" HeightRequest="36"/>
            <Button x:Name="LoadMoreButton" Grid.Column="2" Text="{x:Static res:AppResources.Logs_Button_LoadMore}" FontSize="10" HeightRequest="36"/>
            <Button x:Name="ClearScreenButton" Grid.Column="3" Text="{x:Static res:AppResources.Logs_Button_ClearUi}" FontSize="10" HeightRequest="36"/>
        </Grid>

        <!-- Linha 1 -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
            <Label x:Name="InfoLabel" Text="{x:Static res:AppResources.Logs_Info_Ready}" FontSize="12" TextColor="#616161" VerticalOptions="Center"/>
            <Button x:Name="ExportButton" Grid.Column="1" Text="{x:Static res:AppResources.Logs_Button_ExportCsv}" FontSize="10" HeightRequest="36"/>
            <Button x:Name="ClearButton" Grid.Column="2" Text="{x:Static res:AppResources.Logs_Button_ClearDb}" FontSize="10" HeightRequest="36"/>
        </Grid>

        <!-- Linha 2 (ocupa o resto da tela => scroll funciona) -->
        <ListView Grid.Row="2"
                  x:Name="LogsList"
                  CachingStrategy="RecycleElement"
                  SelectionMode="None"
                  HasUnevenRows="False"
                  RowHeight="22"
                  SeparatorVisibility="None"
                  VerticalOptions="FillAndExpand"
                  ItemTapped="LogsList_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</ContentPage>