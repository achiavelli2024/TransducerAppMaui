<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TransducerAppMaui.Views.LogsPage"
    Title="Logs">

    <VerticalStackLayout Padding="10" Spacing="10" BackgroundColor="#FAFAFA">

        <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
            <Label Text="Logs (SQLite)" FontAttributes="Bold" FontSize="14" TextColor="#212121" />
            <Button x:Name="RefreshButton" Grid.Column="1" Text="LOAD" FontSize="10" HeightRequest="36"/>
            <Button x:Name="LoadMoreButton" Grid.Column="2" Text="LOAD +" FontSize="10" HeightRequest="36"/>
            <Button x:Name="ClearScreenButton" Grid.Column="3" Text="CLEAR UI" FontSize="10" HeightRequest="36"/>
        </Grid>

        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
            <Label x:Name="InfoLabel" Text="Ready" FontSize="12" TextColor="#616161" VerticalOptions="Center"/>
            <Button x:Name="ExportButton" Grid.Column="1" Text="EXPORT CSV" FontSize="10" HeightRequest="36"/>
            <Button x:Name="ClearButton" Grid.Column="2" Text="CLEAR DB" FontSize="10" HeightRequest="36"/>
        </Grid>

        <ListView x:Name="LogsList"
                  CachingStrategy="RecycleElement"
                  SelectionMode="None"
                  HasUnevenRows="False"
                  RowHeight="22"
                  SeparatorVisibility="None"
                  VerticalOptions="FillAndExpand"
                  ItemTapped="LogsList_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        

    </VerticalStackLayout>
</ContentPage>