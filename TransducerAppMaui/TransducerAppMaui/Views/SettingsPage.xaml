<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:TransducerAppMaui.Resources.Strings"
             x:Class="TransducerAppMaui.Views.SettingsPage"
             Title="{x:Static res:AppResources.Settings_Title}">

    <ScrollView>
        <Grid Padding="16"
              MaximumWidthRequest="960">

            <VerticalStackLayout Spacing="16">

                <Label Text="{x:Static res:AppResources.Settings_Title}"
                       Style="{StaticResource Headline}"
                       SemanticProperties.HeadingLevel="Level1" />

                <!-- ✅ DEFAULT (NARROW): 1 coluna, 2 linhas -->
                <Grid x:Name="SectionsGrid"
                      RowSpacing="16"
                      ColumnSpacing="16"
                      RowDefinitions="Auto,Auto"
                      ColumnDefinitions="*">

                    <!-- CARD: Logging (linha 0) -->
                    <Frame x:Name="LoggingCard"
                           Grid.Row="0"
                           Grid.Column="0"
                           Padding="14"
                           CornerRadius="10"
                           BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">

                        <VerticalStackLayout Spacing="12">

                            <Label Text="{x:Static res:AppResources.Settings_Logging_Title}"
                                   Style="{StaticResource SubHeadline}"
                                   SemanticProperties.HeadingLevel="Level2" />

                            <Grid ColumnDefinitions="*,Auto"
                                  RowDefinitions="Auto,Auto"
                                  RowSpacing="6"
                                  ColumnSpacing="12">

                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{x:Static res:AppResources.Settings_EnableLogging}"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"
                                       VerticalOptions="Center" />

                                <Switch x:Name="LoggingEnabledSwitch"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center" />

                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       x:Name="LoggingStatusLabel"
                                       Text="Status: Unknown"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}" />
                            </Grid>

                            <Label Text="{x:Static res:AppResources.Settings_TipLogging}"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}" />

                        </VerticalStackLayout>
                    </Frame>

                    <!-- CARD: Language (linha 1) -->
                    <Frame x:Name="LanguageCard"
                           Grid.Row="1"
                           Grid.Column="0"
                           Padding="14"
                           CornerRadius="10"
                           BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">

                        <VerticalStackLayout Spacing="12">
                            <Label Text="{x:Static res:AppResources.Settings_Language_Title}"
                                   Style="{StaticResource SubHeadline}"
                                   SemanticProperties.HeadingLevel="Level2" />

                            <Label Text="{x:Static res:AppResources.Settings_AppLanguage}"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}" />

                            <Picker x:Name="LanguagePicker"
                                    Title="{x:Static res:AppResources.Settings_Language_Title}"
                                    FontSize="14" />

                            <Label x:Name="LanguageStatusLabel"
                                   Text="{x:Static res:AppResources.Settings_Language_Current_Auto}"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}" />

                            <Label Text="{x:Static res:AppResources.Settings_Language_Note}"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}" />
                        </VerticalStackLayout>
                    </Frame>

                </Grid>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>