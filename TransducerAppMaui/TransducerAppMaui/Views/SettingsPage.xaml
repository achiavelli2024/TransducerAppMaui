<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransducerAppMaui.Views.SettingsPage"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Settings"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Logging (SQLite)"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <!-- Toggle de logging -->
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="6" ColumnSpacing="12">
                <Label Grid.Row="0" Grid.Column="0"
                       Text="Enable logging (save logs to DB)"
                       FontSize="14"
                       TextColor="#212121"
                       VerticalOptions="Center" />

                <Switch x:Name="LoggingEnabledSwitch"
                        Grid.Row="0" Grid.Column="1"
                        HorizontalOptions="End"
                        VerticalOptions="Center" />

                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       x:Name="LoggingStatusLabel"
                       Text="Status: Unknown"
                       FontSize="12"
                       TextColor="#616161" />
            </Grid>

            <Label
                Text="Tip: Keep this OFF for best performance. Turn ON only when you need to record RX/TX logs and export them."
                FontSize="12"
                TextColor="#616161" />

            <!-- ===== Idioma ===== -->
            <Label
                Text="Language"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <VerticalStackLayout Spacing="8">
                <Label Text="App language"
                       FontSize="14"
                       TextColor="#212121" />

                <Picker x:Name="LanguagePicker"
                        Title="Select language"
                        FontSize="14" />

                <Label x:Name="LanguageStatusLabel"
                       Text="Current: Auto (system)"
                       FontSize="12"
                       TextColor="#616161" />

                <Label Text="Note: Changing language will refresh the app UI."
                       FontSize="12"
                       TextColor="#616161" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>