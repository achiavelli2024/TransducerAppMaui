<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:TransducerAppMaui.Resources.Strings"
             x:Class="TransducerAppMaui.Views.SettingsPage"
             Title="{x:Static res:AppResources.Settings_Title}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="{x:Static res:AppResources.Settings_Title}"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="{x:Static res:AppResources.Settings_Logging_Title}"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <!-- Toggle de logging -->
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="6" ColumnSpacing="12">
                <Label Grid.Row="0" Grid.Column="0"
                       Text="{x:Static res:AppResources.Settings_EnableLogging}"
                       FontSize="14"
                       TextColor="#212121"
                       VerticalOptions="Center" />

                <Switch x:Name="LoggingEnabledSwitch"
                        Grid.Row="0" Grid.Column="1"
                        HorizontalOptions="End"
                        VerticalOptions="Center" />

                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       x:Name="LoggingStatusLabel"
                       Text="Status: Unknown"
                       FontSize="12"
                       TextColor="#616161" />
            </Grid>

            <Label
                Text="{x:Static res:AppResources.Settings_TipLogging}"
                FontSize="12"
                TextColor="#616161" />

            <!-- ===== Idioma ===== -->
            <Label
                Text="{x:Static res:AppResources.Settings_Language_Title}"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <VerticalStackLayout Spacing="8">
                <Label Text="{x:Static res:AppResources.Settings_AppLanguage}"
                       FontSize="14"
                       TextColor="#212121" />

                <Picker x:Name="LanguagePicker"
                        Title="{x:Static res:AppResources.Settings_Language_Title}"
                        FontSize="14" />

                <Label x:Name="LanguageStatusLabel"
                       Text="{x:Static res:AppResources.Settings_Language_Current_Auto}"
                       FontSize="12"
                       TextColor="#616161" />

                <Label Text="{x:Static res:AppResources.Settings_Language_Note}"
                       FontSize="12"
                       TextColor="#616161" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>