<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransducerAppMaui.MainHomePage"
             Title="Home">



    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            

            <Label
                Text="Welcome!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="App Connect to Transducer Phoenix"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome" />

            <Button
                x:Name="btnFreetest"
                Text="Free Test" 
                SemanticProperties.Hint="Free Test Page"
                Clicked="OnFreetestClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="OpenLogsPageButton"
                Text="Logs" 
                SemanticProperties.Hint="Logs"
                Clicked="OpenLogsPageButtonClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="OpenSettingsPageButton"
                Text="Settings" 
                SemanticProperties.Hint="Settings"
                Clicked="OpenSettingsPageButtonClicked"
                HorizontalOptions="Fill" />


        </VerticalStackLayout>
    
    
    
    
    </ScrollView>









</ContentPage>